{% extends "layouts/base.njk" %}

{% block content %}
<article class="container-custom section-padding">
  {% if title %}
  <header class="mb-12 max-w-container-md mx-auto">
    <h1 class="text-h1 mb-4">{{ title }}</h1>
    {% if description %}
    <p class="text-body-lg text-neutral-500">{{ description }}</p>
    {% endif %}
  </header>
  {% endif %}

  <div class="prose max-w-container-md mx-auto">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
