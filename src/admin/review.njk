---
layout: layouts/base.njk
title: Review Submissions
description: Instructor interface for reviewing student design submissions
permalink: /admin/review/
---

<div class="hero">
  <div class="container">
    <h1>Review Submissions</h1>
    <p class="hero-description">Review and manage student design submissions</p>
  </div>
</div>

<section class="container">
  <div class="mb-xl">
    <button class="button button-secondary" data-filter="all">All</button>
    <button class="button button-secondary" data-filter="submitted">Submitted</button>
    <button class="button button-secondary" data-filter="approved">Approved</button>
    <button class="button button-secondary" data-filter="rejected">Rejected</button>
  </div>

  <div id="submissions-container">
    <p class="text-center">Loading submissions...</p>
  </div>
</section>

<div id="detail-modal" class="modal" aria-hidden="true">
  <div class="modal-content" style="max-width: 900px;">
    <div class="modal-header">
      <h2 id="modal-title">Submission Details</h2>
      <button id="close-modal" class="close-button" aria-label="Close">&times;</button>
    </div>
    <div class="modal-body" id="modal-body">
    </div>
    <div class="modal-footer">
      <button id="approve-btn" class="button button-primary">Approve</button>
      <button id="reject-btn" class="button button-secondary">Reject</button>
    </div>
  </div>
</div>

{% block scripts %}
<script src="/js/review.js" type="module"></script>
{% endblock %}
